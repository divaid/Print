<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTheme" parent="android:Theme.Holo">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:editTextStyle">@style/Widget.EditText.Black</item>
        <!--<item name="android:windowSoftInputMode">stateHidden</item>-->
    </style>

    <style name="Widget.EditText.Black" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/theme_blue_bright</item>
    </style>

    <style name="Transparent">
        <item name="android:windowBackground">@color/translucence</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>-->
    </style>
</resources>